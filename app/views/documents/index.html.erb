<div class="col-lg-12">
  <%= flash[:notice] %>
<div class="card rounded-0 mt-5 mb-5"  > 
  <div class="card-body" >
    <h5 class= "text-center"> List All Employee Documents:</h5>
  </div>
</div>
  <%= link_to "Create new Document ", new_document_path, class: "btn btn-primary btn-lg mb-4  rounded-0" %>
  <%= link_to "Create new Employee ", new_employee_path, class: "btn btn-primary btn-lg mb-4  rounded-0" %>
<table class = "table table-bordered">
 <thead>
  <tr> 
  <th> Name</th>
  <th> Document Type</th>
  <th> Employee </th>
  <th> Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @documents.each do |document| %>
    <tr> 
    <th><%= document.name %> </th>
    <th><%= document.doc_type %> </th> 
    <th><%=link_to document.employee.name, employee_path(document.employee)%> </th>
    <th>
    <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Actions
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <li> <%= link_to "Edit doc", edit_document_path(document), class: "dropdown-item" %></li>
    <li> <%= link_to "view doc", document_path(document), class: "dropdown-item" %></li>
    <li> <%= link_to "delete doc", document_path(document), class: "dropdown-item", method: :delete, data: { confirm: 'Are you sure to delete this Document?'}%></li>
    </ul>
    </div>
    </th>
    </tr>
  <% end %>
   </tbody>
</table>
</div>
